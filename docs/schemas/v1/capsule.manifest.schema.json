{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://namnesis.dev/schemas/v1/capsule.manifest.schema.json",
  "title": "Namnesis Capsule Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x_": {}
  },
  "required": [
    "spec_version",
    "schema_version",
    "capsule_id",
    "created_at",
    "tool",
    "artifacts",
    "blobs",
    "redaction",
    "signature"
  ],
  "properties": {
    "spec_version": { "const": "v1" },
    "schema_version": { "$ref": "#/$defs/semver" },
    "capsule_id": { "$ref": "#/$defs/capsule_id" },
    "created_at": { "type": "string", "format": "date-time" },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "properties": {
        "workspace_fingerprint": { "type": "string", "minLength": 1, "maxLength": 128 },
        "host_tz": { "type": "string" }
      }
    },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "#/$defs/artifact" }
    },
    "blobs": {
      "type": "array",
      "items": { "$ref": "#/$defs/blob" }
    },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["report_path", "policy_version"],
      "properties": {
        "report_path": { "type": "string", "const": "redaction.report.json" },
        "policy_version": { "type": "string" }
      }
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["alg", "payload_alg", "signer_address", "sig"],
      "properties": {
        "alg": { "type": "string", "const": "ecdsa_secp256k1_eip191" },
        "payload_alg": { "type": "string", "const": "rfc8785_jcs_without_signature_utf8" },
        "signer_address": { "$ref": "#/$defs/eth_address" },
        "sig": { "type": "string", "pattern": "^[0-9a-fA-F]+$" }
      }
    },
    "compression": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "algorithm": { "type": "string" },
        "level": { "type": "integer" },
        "original_size_bytes": { "type": "integer", "minimum": 0 },
        "compressed_size_bytes": { "type": "integer", "minimum": 0 },
        "compression_ratio": { "type": "number" }
      }
    },
    "access": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["owner"],
      "properties": {
        "owner": { "type": "string" },
        "readers": { "type": "array", "items": { "type": "string" } },
        "public": { "type": "boolean" }
      }
    },
    "chain_metadata": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "properties": {
        "soul_id": { "type": "integer" },
        "kernel": { "type": "string" },
        "chain_id": { "type": "integer" }
      }
    }
  },
  "$defs": {
    "hex64": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "capsule_id": {
      "type": "string",
      "pattern": "^(0x[0-9a-fA-F]{40}/)?[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "eth_address": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    },
    "semver": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "path": {
      "type": "string",
      "pattern": "^(?!/)(?!.*\\\\)(?!^[A-Za-z]:)(?!.*(?:^|/)\\.\\.(?:/|$)).+"
    },
    "artifact": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["path", "kind", "mode", "plaintext_hash", "size_bytes", "blob_id"],
      "properties": {
        "path": { "$ref": "#/$defs/path" },
        "kind": {
          "type": "string",
          "anyOf": [
            { "enum": ["memory", "persona", "ops", "project", "other"] },
            { "pattern": "^x_" }
          ]
        },
        "mode": {
          "type": "string",
          "enum": ["include_encrypted", "include_redacted", "include_plaintext", "exclude"]
        },
        "plaintext_hash": { "$ref": "#/$defs/hex64" },
        "size_bytes": { "type": "integer", "minimum": 0 },
        "blob_id": { "$ref": "#/$defs/hex64" }
      }
    },
    "blob": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": { "^x_": {} },
      "required": ["blob_id", "hash", "size_bytes", "storage"],
      "properties": {
        "blob_id": { "$ref": "#/$defs/hex64" },
        "hash": { "$ref": "#/$defs/hex64" },
        "size_bytes": { "type": "integer", "minimum": 0 },
        "storage": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": { "^x_": {} },
          "required": ["backend", "ref"],
          "properties": {
            "backend": { "type": "string", "enum": ["local_dir", "s3", "presigned_url"] },
            "ref": { "type": "string", "minLength": 1 }
          }
        },
        "is_archive": { "type": "boolean" },
        "archive_format": { "type": "string" }
      }
    }
  }
}
