---
/**
 * MeditationQuote - Styled quote block for philosophical content
 * Used in meditations/writings section
 */
interface Props {
  author?: string;
  source?: string;
}

const { author, source } = Astro.props;
---

<figure class="meditation-quote">
  <blockquote>
    <slot />
  </blockquote>
  {(author || source) && (
    <figcaption>
      {author && <cite class="quote-author">{author}</cite>}
      {source && <span class="quote-source">{source}</span>}
    </figcaption>
  )}
</figure>

<style>
  .meditation-quote {
    margin: var(--space-8) 0;
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
  }

  .meditation-quote blockquote {
    font-family: var(--font-mono);
    font-size: var(--font-size-lg);
    color: var(--color-text-primary);
    line-height: var(--line-height-relaxed);
    margin: 0;
    padding: 0;
    border: none;
    background: none;
  }

  .meditation-quote blockquote :global(p) {
    margin-bottom: var(--space-4);
  }

  .meditation-quote blockquote :global(p:last-child) {
    margin-bottom: 0;
  }

  .meditation-quote figcaption {
    margin-top: var(--space-4);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .quote-author {
    font-style: normal;
    color: var(--color-accent-yellow);
  }

  .quote-source::before {
    content: ' â€” ';
  }

  .quote-source {
    font-style: italic;
  }
</style>
